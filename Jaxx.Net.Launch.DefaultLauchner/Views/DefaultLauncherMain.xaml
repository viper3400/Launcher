<UserControl x:Class="Jaxx.Net.Launch.DefaultLauchner.Views.DefaultLauncherMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <StackPanel Background="#FFFF5100" MinHeight="30" Visibility="{Binding IsErrorMessageVisible, Converter={StaticResource BoolToVis}}">
                <Label Content="{Binding ErrorMessage}" ></Label>
            </StackPanel>
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Items}" />
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
